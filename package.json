{
  "name": "arrow-render-to-string",
  "version": "0.0.1-beta.3",
  "repository": "git@github.com:barelyhuman/arrow-render-to-string.git",
  "license": "MIT",
  "author": "Reaper <ahoy@barelyhuman.dev>",
  "main": "./index.js",
  "module": "./index.mjs",
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "next": "bumpp",
    "fix": "prettier --write .",
    "test": "uvu -r esm tests",
    "test:ci": "c8 uvu -r esm tests ",
    "size": "sizesnap",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@barelyhuman/prettier-config",
  "devDependencies": {
    "@barelyhuman/prettier-config": "^1.0.0",
    "bumpp": "^9.2.0",
    "c8": "^8.0.1",
    "esm": "^3.2.25",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^2.7.1",
    "sizesnap": "^0.2.1",
    "tsup": "^6.1.2",
    "typescript": "^4.7.4",
    "uvu": "^0.5.6",
    "uvu-inline-snapshot": "^0.0.2"
  },
  "sizesnap": {
    "files": [
      "dist/*.dts",
      "dist/*.ts",
      "dist/*.js"
    ]
  },
  "lint-staged": {
    "*.{js,css,md,json}": "prettier --write"
  },
  "peerDependencies": {
    "@arrow-js/core": "^1.0.0-alpha.9"
  }
}
